<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:contentDescription="@string/bottom_sheet_behavior"
        android:src="@drawable/ic_greensetting"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="679dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="406dp"
        android:layout_height="268dp"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:background="@drawable/buttonstyle"
        android:text="@string/start"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="341dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="113dp"
        android:layout_height="170dp"
        app:cardBackgroundColor="@color/unavailable"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="485dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:src="@drawable/robot" />

            <TextView
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Nueroid CLR01"
                android:textAlignment="center"

                android:textSize="15sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="117dp"
        android:layout_height="173dp"
        app:cardBackgroundColor="@color/green3"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="481dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="116dp"
                android:layout_height="101dp"
                android:src="@drawable/robot" />

            <TextView
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Nueroid CLR02"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="114dp"
        android:layout_height="168dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        tools:ignore="MissingConstraints"

        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="486dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="116dp"
                android:layout_height="101dp"
                android:src="@drawable/robot" />

            <TextView
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Nueroid CLR03"
                android:textAlignment="center"

                android:textSize="15sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>